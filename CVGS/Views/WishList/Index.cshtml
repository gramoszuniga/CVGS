@model IEnumerable<CVGS.ViewModels.WishList>

@{
    ViewBag.Title = "Your Wishlist";
}

<h2>@ViewBag.Title</h2>

<dl class="dl-horizontal">
    <dt></dt>
    <dd>
        <span class="text-danger">@TempData["infoMsg"]</span>
    </dd>
</dl>

<table class="table">
    <tr>
        <th>
            Game Title
        </th>
        <th>
            Physical Price
        </th>
        <th>
            Downloadable Price
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phyPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.downPrice)
            </td>
            <td>
                @Html.ActionLink(" ", "Remove", new { id = item.gameId }, new { @class = "glyphicon glyphicon-remove-circle" })
            </td>
        </tr>
    }
</table>